@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Information Fetcher</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .url-input {
      min-height: 2.5rem;
      max-height: 20rem;
      overflow-y: auto;
    }
    .result-toggle:checked + .result-content {
      display: block;
    }
    .result-content {
      display: none;
    }
  </style>
</head>
<body class="bg-blue-900 text-gray-100 min-h-screen">
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">URL Information Fetcher</h1>

  <div class="mb-6">
    <label for="urlInput" class="block mb-2 font-semibold">Enter URLs (one per line, up to 100):</label>
    <textarea id="urlInput" class="url-input w-full p-2 bg-blue-800 rounded-md" rows="1"></textarea>
  </div>

  <button id="fetchButton" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    Fetch Information
  </button>

  <div id="results" class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Results</h2>

    <!-- Placeholder for 10 results -->
    <div class="space-y-4">
      <div class="bg-blue-800 rounded-md p-4" x-data="{ open: false }">
        <label class="flex items-center cursor-pointer">
          <input type="checkbox" class="result-toggle hidden">
          <span class="text-lg font-semibold">Result 1</span>
          <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </label>
        <div class="result-content mt-2">
          <p>Information for Result 1 goes here.</p>
        </div>
      </div>

      <!-- Repeat the above structure for Results 2-10 -->

    </div>
  </div>
</div>
</body>
</html>
